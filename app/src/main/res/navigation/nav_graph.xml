<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.firethings.something.feature.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/showMain"
            app:destination="@id/MainFragment"
            app:popUpToInclusive="@id/SplashFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.firethings.something.feature.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/showDetails"
            app:destination="@id/DetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.firethings.something.feature.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="weatherId"
            app:argType="integer"
            app:nullable="false" />
    </fragment>
</navigation>