<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEFFEE"
                android:paddingHorizontal="15dp"
                android:paddingTop="5dp">


    <TextView
        android:id="@+id/latestLatLon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/refreshLabel"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:minLines="2"
        android:text="@string/auto_refresh"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/refreshLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@id/refreshSwitch"
        android:gravity="end"
        android:text="@string/auto_refresh"
        android:textSize="14sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/refreshSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/refreshTapArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/refreshSwitch"
        android:layout_alignTop="@id/refreshSwitch"
        android:layout_alignEnd="@id/refreshSwitch"
        android:layout_alignBottom="@id/refreshSwitch"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>
